<article>
    <h2><%= t('.title') %></h2>

    <table>
        <%= render cart.line_items %>
        <tfoot>
            <tr>
                <th colspan="5">Total:</th>
                <td class="price"><%= number_to_currency(cart.total_price) %></td>
            </tr>
        </tfoot>
    </table>
 
    <h1><%=  %></h1>

    <div class="actions">
        <%= button_to t('.empty'), cart, method: :delete, 
            data: { confirm: 'Are you sure?' },
            remote: true %>

        <%= button_to t('.checkout'), new_order_path(locale: I18n.locale),
            method: :get,
            class: 'checkout',
            :disabled => current_path_begins_with('orders') %>
    </div>
</article>
